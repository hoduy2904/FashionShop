@using FashionShop.Models
@{
    var accounts = new account();
    if (Session["account"] != null)
    {
        accounts = (account)Session["account"];
    }
    string hello="Chào buổi sáng";
    var hour = DateTime.Now.Hour;
    if (hour > 12 && hour < 18)
    {
        hello = "Chào buổi chiều";
    }
    else if (hour > 18)
    {
        hello = "Chào buổi tối";
    }

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendor/slick/slick.css">
    <link rel="stylesheet" href="~/Content/assets/vendor/slick/slick-theme.css">
    <link rel="stylesheet" href="~/Content/assets/css/main.css">
    <link rel="stylesheet" href="~/Content/assets/font/Quicksand/font.css">
</head>
<body>
    <div class="progressHead" style="background-color:#000; height:30px; font-size:15px; padding:0 25px">
        <div class="d-flex justify-content-between text-white align-items-center h-100">
            <b>Xin chào: @($"{accounts.hoTen??"Khách"}")</b>
            <b>@hello</b>
            @if (!string.IsNullOrEmpty(accounts.email))
            {
                <a class="text-white" href="/logout"><b>Đăng xuất</b></a>
            }
            else
            {
                <a class="text-white" href="/login"><b>Đăng nhập</b></a>
            }
        </div>
    </div>
    <div class="container">
        @Html.Action("Navbar", "home")
        <div class="wrapper">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-12">
                    <h4 class="title-footer">Về chúng tôi</h4>
                    <p>Sứ mệnh chúng tôi là đưa đến những sản phẩm chất lượng, nhưng giá lại phải chăng, dễ dàng tiếp cận với người dùng</p>
                </div>
                <div class="col-md-4 col-sm-12">
                    <h4 class="title-footer">Địa chỉ</h4>
                    <p>43 Huỳnh Văn Bánh P.17 Q.Phú Nhuận, TP. Hồ Chí Minh</p>
                </div>
                <div class="col-md-4 col-sm-12">
                    <h4 class="title-footer">Chăm sóc khách hàng</h4>
                    <p>43 Huỳnh Văn Bánh P.17 Q.Phú Nhuận, TP. Hồ Chí Minh</p>
                    <h4 class="title-footer">Mạng xã hội</h4>
                </div>
            </div>
            <hr>
            <div class="row">
                <p class=" col-12 m-0 text-center">Copyright © 2022 Nguyễn Thuý.</p>
            </div>
        </div>
    </footer>
    <script src="~/Content/assets/vendor/Jquery/jquery-3.6.0.min.js"></script>
    <script src="~/Content/assets/vendor/Popper/popper.min.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/vendor/slick/slick.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script type="text/javascript">

    </script>
</body>
</html>