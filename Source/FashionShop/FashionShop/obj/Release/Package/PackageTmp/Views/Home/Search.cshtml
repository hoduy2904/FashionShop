@model IEnumerable<FashionShop.Models.Product>
@using FashionShop.Models


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Tìm kiếm</a></li>
        <li class="breadcrumb-item active" aria-current="page">Từ khoá: @ViewBag.tukhoa</li>
    </ol>
</nav>
<div class="header-category row">
    <h1 class="titleCategory col-sm-12 col-md-9 col-12">Từ khoá: @ViewBag.tukhoa</h1>
    <div class="col-12 m-auto col-md-3 col-lg-3 col-sm-12">
        <div class="btn-group ">
            <button type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sắp xếp theo
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Giá từ cao xuống thấp</a>
                <a class="dropdown-item" href="#">Từ thấp lên cao</a>
                <a class="dropdown-item" href="#">Theo chữ cái a-z</a>
                <a class="dropdown-item" href="#">Theo chữ cái z-a</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Huỷ bỏ lọc</a>
            </div>
        </div>
    </div>
    @if (Model.Count() <= 0)
    {


        <p class="text-center" w-100><b>Không có kết quả nào</b></p>
    }
    else
    {


        <div class="col-12 col-md-12 col-lg-12 col-sm-12">
            <div class="products">
                <div class="row">
                    @foreach (var product in Model)
                    {


                        <div class="col-md-3 col-lg-3 col-sm-6">
                            <div class="product">
                                <div class="image-product">
                                    @if (product.price < product.priceOld && product.price > 0)
                                    {
                                        <span class="salesOff">@ThuVien.tinhPhanTram(product.priceOld.Value, product.price.Value)</span>
                                    }
                                    <img src="@(product.subImages == null ? "" : product.subImages.FirstOrDefault().imgsrc)" alt="">
                                    <span class="addtoCarts"><i class="fa-solid fa-cart-plus"></i></span>
                                </div>
                                <div class="details-product">
                                    <a href="@($"/{product.categorySecond1.categoryFrist1.alias}/{product.categorySecond1.alias}/{product.alias}")">@product.productName</a>
                                    <div class="price">
                                        @if (product.priceOld > 0)
                                        {
                                            <span class="price-old">@ThuVien.VietnamDong(product.priceOld)</span>
                                        }
                                        <span class="price-cur">@ThuVien.VietnamDong(product.price)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
