@model FashionShop.Models.account


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng ký</title>
</head>
<body>
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Register</div>
                    <div class="card-body">
                        <form action="" method="post">
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right" for="hoTen">Họ và tên</label>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.hoTen, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.hoTen, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right" for="email">Email</label>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right" for="pwd">Mật khẩu</label>
                                <div class="col-md-6">
                                    @Html.PasswordFor(model => model.pwd, new { @class = "form-control", @required = "true" })
                                    @Html.ValidationMessageFor(model => model.pwd, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Nhập lại mật khẩu</label>
                                <div class="col-md-6">
                                    <input type="password" id="passwordAgain" class="form-control" name="passwordAgain" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label text-md-right" for="identityCard">CMND</label>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.identityCard, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                                    @Html.ValidationMessageFor(model => model.identityCard, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <b class="text-danger col-md-12 col-form-label text-center">@ViewBag.error</b>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Đăng ký
                                </button>
                                <a href="~/login" class="btn btn-link">
                                    Quay lại đăng nhập
                                </a>
                            </div>
                        </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
