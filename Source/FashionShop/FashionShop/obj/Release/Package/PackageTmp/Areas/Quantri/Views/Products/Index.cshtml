@model IEnumerable<FashionShop.Models.Product>

@{
    Layout = "~/Areas/Quantri/Views/Shared/_Layout.cshtml";
}

    <h1 class="title mb-5">Quản lý sản phẩm</h1>
    <p>
        @Html.ActionLink("Thêm", "Create", null, new {@class="btn btn-primary"})
    </p>

    <div class="form-group mt-2 mb-2">
        <div class="col-md-10">
            @Html.DropDownList("categorySecond", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Giá cũ
                </th>
                <th>
                    Giá
                </th>
                <th>
                    Lượt xem
                </th>
                <th>
                    Danh mục
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.productName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.priceOld)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.views)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categorySecond1.CategoryName)
                    </td>
                    <td>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.productID }) |
                        @Html.ActionLink("Hình ảnh", "Index","subImages", new { productID = item.productID }) |
                        @Html.ActionLink("Xoá", "Delete", new { id = item.productID })
                    </td>
                </tr>
            }

        </table>
        </div>
