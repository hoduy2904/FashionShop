@model IEnumerable<FashionShop.Models.subImage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Quantri/Views/Shared/_Layout.cshtml";
}

<h1 class="title mb-5">Danh sách ảnh sản phẩm</h1>

<p>
    @Html.ActionLink("Thêm mới", "Create", new {productid=Model.FirstOrDefault().productID})
</p>
<table class="table">
    <tr>
        <th>
            Ảnh sản phẩm
        </th>
        <th>
           Sản phẩm
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <img src="@item.imgsrc" style="max-width:150px;"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.productName)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
