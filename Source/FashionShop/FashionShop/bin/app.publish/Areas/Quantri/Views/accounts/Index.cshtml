@model IEnumerable<FashionShop.Models.account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Quantri/Views/Shared/_Layout.cshtml";
}

<h1 class="title mb-5">Quản lý tài khoản</h1>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Họ tên
            </th>
            <th>
                CMND
            </th>
            <th>
                Thời gian tạo
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.hoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.identityCard)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.timecreate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.email }) |
                    @Html.ActionLink("Xem chi tiết", "Details", new { id = item.email }) |
                    @Html.ActionLink("Xoá", "Delete", new { id = item.email })
                </td>
            </tr>
        }

    </table>
    </div>
