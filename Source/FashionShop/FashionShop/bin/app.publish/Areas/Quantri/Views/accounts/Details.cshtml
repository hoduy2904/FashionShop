@model FashionShop.Models.account

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Quantri/Views/Shared/_Layout.cshtml";
}

<h1 class="title mb-5">Thông tin chi tiết</h1>

<div>
    <dl class="dl-horizontal">

        <dt>
            Thời gian tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.timecreate)
        </dd>

        <dt>
           CMND
        </dt>

        <dd>
            @Html.DisplayFor(model => model.identityCard)
        </dd>

        <dt>
           Admin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isAdmin)
        </dd>

        <dt>
           Họ và tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hoTen)
        </dd>
        <dt>Danh sách địa chỉ và thông tin</dt>

        @foreach(var item in Model.infomationAccounts)
            {
            <dd>
                @(item.AddressAccount+"\n"+item.phone)
            </dd>
            }

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.email }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
