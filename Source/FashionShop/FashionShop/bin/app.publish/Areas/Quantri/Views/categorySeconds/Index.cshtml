@model IEnumerable<FashionShop.Models.categorySecond>

@{
    Layout = "~/Areas/Quantri/Views/Shared/_Layout.cshtml";
}

<h1 class="title mb-5">Quản lý danh mục cấp 2</h1>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Tên danh mục
            </th>
            <th>
                Danh mục cấp 1
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryFrist1.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Xoá", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
