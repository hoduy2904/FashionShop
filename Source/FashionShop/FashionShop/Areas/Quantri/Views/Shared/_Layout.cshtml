@using FashionShop.Models
@{ 
    var taikhoan = (account)Session["account"];
}

<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Content/assets/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/admin.css">
    <link rel="stylesheet" href="~/Content/assets/font/Quicksand/font.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css">
</head>
<body class="">

    <div class="navleft">
        <div class="logo p-5 bg-white">
            <b style="font-size:25px; color:rgb(50, 118, 255)">QUẢN TRỊ</b>
        </div>
        <ul>
            <li class="navleft-title">Quản lý danh mục</li>
            <div class="navleft-itemGroup">
                <a href="~/quantri/categoryfrists">Quản lý danh mục cấp 1</a>
                <a href="~/quantri/categoryseconds">Quản lý danh mục cấp 2</a>
            </div>

            <li class="navleft-title"><a href="~/quantri/Orders">Quản lý đơn hàng</a></li>
            <li class="navleft-title"><a href="~/quantri/Products">Quản lý sản phẩm</a></li>

            <li class="navleft-title"><i class="fa-solid fa-address-book icon"></i>Quản lý thông tin</li>
            <div class="navleft-itemGroup">
                <a href="~/quantri/Accounts">Quản lý tài khoản</a>
                <a href="~/quantri/Banners">Quản lý banner</a>
                <a href="~/quantri/formpages">Quản lý pages</a>
            </div>


        </ul>
    </div>
    <div class="content">
        <nav class="d-flex">
            <div class="col-6 align-self-center">
                <i class="fa-solid fa-bars icon icon-toggle"></i>
                <b class="titleMain">Nguyễn Thuý</b>
            </div>
            <div class="col-6 float-right m-auto ">
                <div class="profile float-right d-flex flex-column ">
                    <b>Xin chào: @taikhoan.hoTen</b>
                    <a href="~/logout">Đăng xuất</a>
                </div>
            </div>
        </nav>
        <div class="wrapper container bg-white mt-5">
            @RenderBody()
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Content/assets/vendor/Jquery/jquery-3.6.0.min.js"></script>
    <script src="~/Content/assets/vendor/Popper/popper.min.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/vendor/ckeditor/ckeditor.js"></script>
    <script>
        $('.icon-toggle').on('click', function () {
            $('body').toggleClass("toggle");
        })
        CKEDITOR.replace('noidung');
    </script>
</body>
</html>