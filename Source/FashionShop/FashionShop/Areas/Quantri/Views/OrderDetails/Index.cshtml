@model IEnumerable<FashionShop.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Quantri/Views/Shared/_Layout.cshtml";
    var order = Model.FirstOrDefault().Order;
}

<h1 class="title mb-5">Chi tiết đơn hàng</h1>

<p>
    @Html.ActionLink("Thêm mới", "Create", new { orderid= order.OrderID,email=order.email})
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @($"{item.Product.productName} (size {item.size})")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numberProduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.email)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
    </div>
